\begin_layout Subsubsection
误差分析
\end_layout

\begin_layout Standard
记
\begin_inset Formula $a_{0}=a,b_{0}=b$
\end_inset

, 第
\begin_inset Formula $k$
\end_inset

步的有根区间为
\begin_inset Formula $[a_{k},b_{k}]$
\end_inset

, 设
\begin_inset Formula $x^{*}$
\end_inset

为准确值.
 有
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{aligned}\left|x_{k}-x^{*}\right| & =\left|\frac{b_{k}+a_{k}}{2}-x^{*}\right|\leq\frac{b_{k}-a_{k}}{2}=\frac{b_{k-1}-a_{k-1}}{2^{2}}=\cdots\cdots\\
|x_{k}-x_{k-1}| & =\frac{b_{k}-a_{k}}{2}=\frac{b_{0}-a_{0}}{2^{k+1}}=\frac{b-a}{2^{k+1}}
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
对于给定精度
\begin_inset Formula $\epsilon$
\end_inset

 ,可估计二分法所需的步数
\begin_inset Formula $k$
\end_inset

: 
\begin_inset Formula 
\[
\frac{b-a}{2^{k+1}}\leq\varepsilon\quad\Rightarrow\quad k\geq\log_{2}\frac{b-a}{\varepsilon}-1,
\]

\end_inset

干脆取得
\begin_inset Formula 
\[
\boxed{k=\left\lceil \log_{2}\frac{b-a}{\varepsilon}\right\rceil -1}
\]

\end_inset

即可满足我们对误差的要求.
 
\end_layout

