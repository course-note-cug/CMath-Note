\begin_deeper
\begin_layout Enumerate
迭代法
\begin_inset Formula ${\bf x}^{(k+1)}={\bf Bx}^{(k)}+{\bf f}.$
\end_inset

收敛;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\rho({\bf B})<1$
\end_inset

.
\end_layout

