\begin_layout Standard
\begin_inset Formula 
\begin{align*}
N_{1} & =\sum_{k=1}^{n-1}((n-k)(n-k+1)+n-k)\\
 & =\sum_{k=1}^{n-1}(n-k)^{2}+2\sum_{k=1}^{n-1}(n-k)\\
 & =\underbrace{\sum_{1\leq k\leq n-1}k^{2}}_{k\leftarrow n-k}+2\underbrace{\sum_{1\leq k\leq n-1}k}_{k\leftarrow n-k}\\
 & =\frac{n(n-1)(2n-1)}{6}+2\frac{n(n-1)}{2}\\
 & =\frac{n^{3}}{3}+\frac{n^{2}}{2}-\frac{5n}{6}.
\end{align*}

